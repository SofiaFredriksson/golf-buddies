<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <h2 class="text-left">Edit Profile</h2>
    <%= bootstrap_form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      <%= f.text_field :handicap %>
      <%= f.text_field :country %>
      <%= f.text_area:bio %>
      <%= f.text_field :username %>
      <%= f.hidden_field :password, value: :password%>
      <%= f.hidden_field :password_confirmation, value: :password_confirmation%>
      <%= f.submit "Update my Profile", class: 'form-control login-button' %>
    <% end %>
    </div>
  </div>
</div>
