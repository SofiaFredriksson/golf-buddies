<div id="single-post-content" class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
<h1><%= @user.name %></h1>
<% if @current_user.id == @user.id %>

<%= link_to "Edit Profile", edit_user_path(@user) %>

<% end %>


<h3><%= @user.country %></h3>
<b>About me</b><br/>
<%= @user.bio %><br/>

<b>Handicap: </b> <%= @user.handicap %><br/>


<% if @current_user.id == @user.id %>

<%= link_to "#{@user.name}'s Buddies", buddies_path(@user) %>

<% end %>

<br/><br/>


<b><%=@user.name%>'s reviews</b>
<br/>

<div class="card-deck">
      <% @user.reviews.each do |review|%>
      <div class="col-sm-3 single-post-card">
      <div class="card">
        <div class="card-block">
          <p class="card-text">
            <b>Date Added:</b> <%= review.date %><br/>
            <b>Club:</b> <%= link_to review.club.name, club_path(review.club) %><br/>
            <b>Rank: </b><%= review.rank %><br/>
            <button type="button" class="btn btn-secondary btn-sm"><%= link_to "Read More", review_path(review) %></button>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
  </div><!-- row -->
</div>
